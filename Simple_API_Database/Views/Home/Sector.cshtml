@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<Simple_API_Database.Models.EF_Models.Sector>

<h2>Sector Performances</h2>
<hr />
<b>
    <h3>Below is info pertaining to performance in different sectors. Click the save button below.</h3>
</b>

<table class="table">
    <thead>
        <tr>
            <th>
                Type
            </th>
            <th>
                Name
            </th>
            <th>
                Performance
            </th>
            <th>
                Updated
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.performance)
            </td>
        </tr>
        }

        @{
            Model.Count();
        }
    </tbody>
</table>
<tr>
    <td>
        <a id="dbopt" asp-controller="Home" asp-action="PopulateType"><img src="~/img/button_save-data.png" /></a>
    </td>
</tr>